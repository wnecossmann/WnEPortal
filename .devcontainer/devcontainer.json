{
  "name": "Python 3 & Node.js für Web-Modernisierung",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",

  // Features, die wir automatisch installieren lassen
  "features": {
    // Fügt Node.js Version 18 hinzu (für React)
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
    // Das fehlerhafte sql-server-sdk-Feature haben wir entfernt
  },

  // Befehle, die nach dem Erstellen des Containers ausgeführt werden
  // Wir führen hier die manuelle Installation des ODBC-Treibers aus
  "postCreateCommand": "sudo apt-get update && sudo ACCEPT_EULA=Y apt-get install -y msodbcsql18 && sudo apt-get install -y unixodbc-dev && touch requirements.txt && pip install --user -r requirements.txt",

  // Passt die VS-Code-Umgebung an
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-azureappservice"
      ]
    }
  },
  
  // Leitet unsere Anwendungs-Ports automatisch weiter
  "forwardPorts": [5000, 5173], 
  "portsAttributes": {
    "5000": { 
      "label": "Flask Backend API",
      "onAutoForward": "openBrowser" 
    },
    "5173": { 
      "label": "React Frontend Dev-Server" 
    }
  }
}